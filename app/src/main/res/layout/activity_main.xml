<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5e98ba"
    tools:context="com.example.abhinabera.sellerinfo.MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="#fff"
            android:clickable="false"
            android:elevation="4dp"
            android:drawableLeft="@drawable/ic_account_box"
            android:padding="20dp"
            android:text="  Abhinandan Nabera"
            android:textSize="20sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/roll_number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="#fff"
            android:clickable="false"
            android:drawableLeft="@drawable/ic_assignment"
            android:elevation="4dp"
            android:padding="20dp"
            android:text="  102115038"
            android:textSize="20sp"
            android:visibility="visible" />


        <TextView
            android:id="@+id/email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="#fff"
            android:clickable="false"
            android:elevation="4dp"
            android:drawableLeft="@drawable/email"
            android:padding="20dp"
            android:text="  abhinandannabera@yahoo.in"
            android:textSize="20sp"
            android:visibility="visible" />


        <TextView
            android:id="@+id/mobile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="#fff"
            android:drawableLeft="@drawable/mobile"
            android:clickable="false"
            android:elevation="4dp"
            android:padding="20dp"
            android:text="  +91- 8939033399"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="#fff"
            android:clickable="false"
            android:drawableLeft="@drawable/address"
            android:elevation="4dp"
            android:padding="20dp"
            android:text="  Garnet C 19"
            android:textSize="20sp" />


    </LinearLayout>
</RelativeLayout>
